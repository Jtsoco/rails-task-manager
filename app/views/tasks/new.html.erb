<div class="container mt-3">
  <h1 class = "font-large">New Task</h1>
  <%= form_with model: @task do |t| %>
  <%= t.label :title %>
  <%= t.text_field :title, class:'form-control mb-3' %>
  <%= t.label :details %>
  <%= t.text_field :details, class:'form-control mb-3' %>
  <%= t.submit class: "btn btn-primary" %>
  <% end %>
</div>
